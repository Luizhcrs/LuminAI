<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Sombra -->
            <item android:left="2dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="#40000000" />
                </shape>
            </item>
            <!-- Fundo principal pressionado -->
            <item android:bottom="4dp" android:right="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="30dp"
                        android:startColor="#FF8A2BE2"
                        android:centerColor="#FF6A1B9A"
                        android:endColor="#FF4A0E6B" />
                    <stroke android:width="2dp" android:color="#AAFFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Estado normal -->
    <item>
        <layer-list>
            <!-- Sombra elegante -->
            <item android:left="1dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#30000000" />
                </shape>
            </item>
            <!-- Fundo principal -->
            <item android:bottom="2dp" android:right="1dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="35dp"
                        android:startColor="#FF9A4AE2"
                        android:centerColor="#FF7B2CBF"
                        android:endColor="#FF5A189A" />
                    <stroke android:width="1dp" android:color="#66FFFFFF" />
                </shape>
            </item>
            <!-- Brilho interno -->
            <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="15dp"
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
