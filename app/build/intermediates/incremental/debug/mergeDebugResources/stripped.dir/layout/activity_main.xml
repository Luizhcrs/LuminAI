<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_floating_button"
        android:contentDescription="Ícone do botão flutuante"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão Flutuante"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Este app cria um botão flutuante que fica visível em todas as aplicações"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"
        android:maxLines="3" />

    <TextView
        android:id="@+id/tvPermissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificando permissão..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@drawable/permission_status_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <Button
            android:id="@+id/btnCheckPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificar Permissão"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Botão Flutuante"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btnStopService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parar Botão Flutuante"
            android:textSize="16sp"
            android:padding="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Importante: Para funcionar, você precisa conceder permissão de sobreposição nas configurações do sistema."
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@drawable/warning_background"
        android:textColor="@color/warning_text" />

    <!-- ImageView para exibir imagens compartilhadas -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="24dp"
        android:contentDescription="Imagem compartilhada" />

    <TextView
        android:id="@+id/tvImageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhuma imagem recebida"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/secondary_text" />

</LinearLayout>
